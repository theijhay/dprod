{
  "name": "dprod",
  "version": "0.1.0",
  "description": "Zero-configuration deployment platform",
  "private": true,
  "workspaces": [
    "tools/cli",
    "tools/frontend"
  ],
  "scripts": {
    "dev": "docker-compose up --build",
    "dev:api": "cd services/api && python -m uvicorn core.main:app --reload --host 0.0.0.0 --port 8000",
    "dev:cli": "cd tools/cli && npm run dev",
    "dev:frontend": "cd tools/frontend && npm run dev",
    "test": "pytest",
    "lint": "black . && isort . && flake8 .",
    "setup": "./scripts/setup-dev.sh"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
