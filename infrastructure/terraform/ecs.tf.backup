# CloudWatch Log Group
resource "aws_cloudwatch_log_group" "dprod_staging" {
  name              = "/ecs/dprod-staging"
  retention_in_days = 7

  tags = {
    Environment = "staging"
    Project     = "dprod"
  }
}

# ECS Service for API
resource "aws_ecs_service" "api" {
  name            = "dprod-api"
  cluster         = aws_ecs_cluster.dprod_staging.id
  task_definition = aws_ecs_task_definition.api.arn
  desired_count   = 1
  launch_type     = "FARGATE"

  network_configuration {
    security_groups  = [aws_security_group.ecs_tasks.id]
    subnets          = [aws_subnet.dprod_staging_public.id, aws_subnet.dprod_staging_public_2.id]
    assign_public_ip = true
  }

  load_balancer {
    target_group_arn = aws_lb_target_group.api.arn
    container_name   = "api"
    container_port   = 8000
  }

  depends_on = [aws_lb_listener.dprod_staging]

  tags = {
    Environment = "staging"
    Project     = "dprod"
  }
}

