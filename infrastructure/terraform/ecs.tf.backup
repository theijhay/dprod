# ALB Listener
resource "aws_lb_listener" "dprod_staging" {
  load_balancer_arn = aws_lb.dprod_staging.arn
  port              = "80"
  protocol          = "HTTP"

  default_action {
    type             = "forward"
    target_group_arn = aws_lb_target_group.api.arn
  }
}

# ALB Listener Rules
resource "aws_lb_listener_rule" "api" {
  listener_arn = aws_lb_listener.dprod_staging.arn
  priority     = 100

  action {
    type             = "forward"
    target_group_arn = aws_lb_target_group.api.arn
  }

  condition {
    path_pattern {
      values = ["/api/*", "/health"]
    }
  }
}

resource "aws_lb_listener_rule" "orchestrator" {
  listener_arn = aws_lb_listener.dprod_staging.arn
  priority     = 200

  action {
    type             = "forward"
    target_group_arn = aws_lb_target_group.orchestrator.arn
  }

  condition {
    path_pattern {
      values = ["/orchestrator/*"]
    }
  }
}

resource "aws_lb_listener_rule" "detection" {
  listener_arn = aws_lb_listener.dprod_staging.arn
  priority     = 300

  action {
    type             = "forward"
    target_group_arn = aws_lb_target_group.detection.arn
  }

  condition {
    path_pattern {
      values = ["/detection/*"]
    }
  }
}

# ECS Task Definition for API
resource "aws_ecs_task_definition" "api" {
  family                   = "dprod-api"
  network_mode             = "awsvpc"
  requires_compatibilities = ["FARGATE"]
  cpu                      = 256
  memory                   = 512
  execution_role_arn       = aws_iam_role.ecs_task_execution_role.arn
  task_role_arn            = aws_iam_role.ecs_task_role.arn

  container_definitions = jsonencode([
    {
      name  = "api"
      image = "${aws_ecr_repository.dprod_api.repository_url}:latest"
      
      portMappings = [
        {
          containerPort = 8000
          protocol      = "tcp"
        }
      ]

      environment = [
        {
          name  = "NODE_ENV"
          value = "staging"
        },
        {
          name  = "DATABASE_URL"
          value = "postgresql://dprod:${var.db_password}@${aws_db_instance.dprod_staging_postgres.endpoint}:5432/dprod_staging"
        },
        {
          name  = "REDIS_URL"
          value = "redis://${aws_elasticache_cluster.dprod_staging_redis.cache_nodes[0].address}:6379/0"
        }
      ]

      logConfiguration = {
        logDriver = "awslogs"
        options = {
          awslogs-group         = "/ecs/dprod-staging"
          awslogs-region        = var.aws_region
          awslogs-stream-prefix = "api"
        }
      }

      healthCheck = {
        command     = ["CMD-SHELL", "curl -f http://localhost:8000/health || exit 1"]
        interval    = 30
        timeout     = 5
        retries     = 3
        startPeriod = 60
      }
    }
  ])

  tags = {
    Environment = "staging"
    Project     = "dprod"
  }
}

